{
  "compilerOptions": {
    "isolatedModules": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ES2019",
    "strict": true,
    "allowJs": false,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "incremental": true,
    "sourceMap": true,
    "lib": [
      "dom",
      "es2017"
    ],
    "outDir": "./build"
  },
  "exclude": ["build"]
}
